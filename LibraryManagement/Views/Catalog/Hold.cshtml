@model LibraryManagement.Models.CheckoutModels.CheckoutModel

<div>
    <div>
        <h2 class="title">Place Hold On Library Item</h2>
    </div>
    <div class="onHoldDetails">
        <p class="itemTitle">Title: <span>@Model.Title</span></p>
        <img class="detailImage" src="@Model.ImageUrl"/>
        <p>There are currently <span class="holdCount">@Model.HoldCount</span> holds in the queue for this item.</p>
        @using (Html.BeginForm("PlaceHold", "Catalog", FormMethod.Post))
        {
            @Html.HiddenFor(a => a.AssetId)
            <div class="textBox">
                Please insert a Library Card ID.
                @Html.TextBoxFor(a => a.LibraryCardId)
            </div>
            <div class="placeHoldButton">
                <button type="submit" class="btn btn-info btn-lg">Place Hold.</button>
            </div>
        }
    </div>
</div>

<style>
    .title {
        text-align: center;
        margin: 20px;
    }

    .onHoldDetails {
        margin: auto;
        width: 50%;
    }
    .onHoldDetails > p {
        text-align: center;
    }

    .itemTitle {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
    }

    .itemTitle > span {
        font-size: 15px;
        font-weight: normal;
    }
    .holdCount {
        color: red;
    }
    .detailImage {
        display: block;
        margin-left: auto;
        margin-right: auto;
        height: 300px;
        width: 200px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .textBox {
        text-align: center;
        margin: 10px;
    }

    .placeHoldButton {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 10px;
    }
</style>