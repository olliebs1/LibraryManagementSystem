@model LibraryManagement.Models.Catalog.AssetDetailModel;

<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2 class="title">View Library Item</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="itemDetails">
                <p id="itemTitle">Title: <span>@Model.Title</span></p>
                <p id="itemAuthor">Author: <span>@Model.AuthorOrDirector</span></p>
                <p id="itemStatus">Status: <span>@Model.Status</span></p>
                <p id="itemLocation">Location: <span>@Model.CurrentLocation</span></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="itemDetails">
                <p id="itemISBN">ISBN: <span>@Model.ISBN</span></p>
                <p id="itemDewey">Call Number: <span>@Model.DeweyCallNumber</span></p>
                <p id="itemCost">Replacement Cost: <span>@Model.Cost</span></p>
                @if (Model.Status == "Lost")
                {
                    <p>This item has been lost. It cannot be checked out.</p>
                    <p><a class="btn btn-lg btn-danger" role="button" asp-controller="Catalog" asp-action="MarkFound" asp-route-id="@Model.AssetId">Mark Item Found</a></p>

                }

                @if (Model.Status == "Checked Out")
                {
                    <p id="itemPatron">Checked Out By: <span>@Model.PatronName</span> </p>

                    <p><a class="btn btn-lg btn-success" role="button" asp-controller="Catalog" asp-action="CheckIn" asp-route-id="@Model.AssetId">Check In</a></p>
                    <p><a class="btn btn-lg btn-warning" role="button" asp-controller="Catalog" asp-action="Hold" asp-route-id="@Model.AssetId">Place Hold</a></p>
                }
                @if (Model.Status == "Available")
                {
                    <p><a class="btn btn-lg btn-info" role="button" asp-controller="Catalog" asp-action="Checkout" asp-route-id="@Model.AssetId">Check Out</a></p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <h4 class="tableTitle">Checkout History</h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date Loaned</th>
                    <th>Date Returned</th>
                    <th>Card ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach( var checkout in Model.CheckoutHistory)
                {
                    <tr>
                        <td>
                            @checkout.CheckedOut
                        </td>
                        <td>
                            @checkout.CheckedIn
                        </td>
                        <td>
                            @checkout.LibraryCard.Id
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-6">
        <h4 class="tableTitle">Current Holds</h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Hold Placed</th>
                    <th>Patron</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hold in Model.CurrentHolds)
                {
                    <tr>
                        <td>
                            @hold.HoldPlaced
                        </td>
                        <td>
                            @hold.PatronName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .title {
        text-align: center;
        margin: 20px;
    }
    .detailImage {
        align-items: center;
        height: 300px;
        width: 200px;
        margin: 20px;
    }
    .itemDetails > p {
        font-size: 18px;
        font-weight: bold;
        margin: 20px;
    }
    .itemDetails > p > span {
        font-size: 15px;
        font-weight: normal;
    }
    .tableTitle {
        margin: 20px;
    }
</style>