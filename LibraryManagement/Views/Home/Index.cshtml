@model LibraryManagement.Models.Branch.BranchIndexModel;

@{
    ViewData["Title"] = "Online Library";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="catalog">
                <h2 class="mdl-card__title-text">Library Catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library assets.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col"> 
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="patrons">
                <h2 class="mdl-card__title-text">Patrons</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library patron data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-controller="Patron" asp-action="Index">
                    View Patron Index
                </a>
            </div>
        </div>
    </div>


    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="branches">
                <h2 class="mdl-card__title-text">Branches</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library branches.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" asp-controller="Patron" asp-action="Index">
                    View Branch Index
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    #catalog {
        background: url('/images/books.jpeg') bottom right 15% no-repeat #555;
    }
    #branches {
        background: url('/images/branch.jpeg') bottom right 15% no-repeat #555;
    }
    #patrons {
        background: url('/images/patron.jpeg') bottom right 15% no-repeat #555;
    }
    .demo-card-square.mdl-card {
        width: 320px;
        height: 320px;
    }
    .demo-card-square > .mdl-card__title {
        color: #fff;
    }
</style>